<header class="header">
    <div>
        {{>logo}}
    </div>

    <nav class="header_nav ">
        <div class="header_nav_right">
            {{>nav list=header }}
        </div>
    </nav>
</header>

<main>
    <div class="form_box">
        {{#with info}}
        <div class="aside">
            <div class="aside_title">{{title}}</div>
            <div class="aside_text">{{description}}</div>
        </div>
        {{/with}}
        {{#with form}}
        <form class="form">
            <h2 class="form_title">
                {{title}}
            </h2>
            <div class="form_input_list">
                {{#each inputs}}
                <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}"
                    class="form_input">
                {{/each}}
            </div>
            <div class="form_checkbox">
                <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                <div></div>
                <label for="{{checkbox.name}}">{{checkbox.label}}</label>
            </div>
            <button type="submit" class="form_button">{{button}}</button>
            <p class="form_info">{{info}}</p>
        </form>
        {{/with}}
    </div>
    {{#with updates}}
    {{> messages data=this}}
    {{/with}}
</main>
{{#with expirience}}
<div class="expirience">
    <div class="expirience_title">
        {{title}}
    </div>
    <div class="expirience_badge">{{badge}}</div>
    <div class="expirience_content">
        {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>
                {{details}}
            </p>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}
<footer class="row footer">
    <div class="col-3">
        {{>logo}}
        <span class="footer_copyright"> Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div class="col-3">
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true }}
    </div>
    {{/each}}

</footer>